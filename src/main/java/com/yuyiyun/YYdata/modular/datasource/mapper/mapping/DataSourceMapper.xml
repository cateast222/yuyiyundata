<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.yuyiyun.YYdata.modular.datasource.mapper.DataSourceMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap"
		type="com.yuyiyun.YYdata.modular.datasource.entity.DataSource">
		<id column="uuid" property="uuid" />
		<result column="chs_name" property="chsName" />
		<result column="org_name" property="orgName" />
		<result column="website_url" property="websiteUrl" />
		<result column="website_name" property="websiteName" />
		<result column="platform" property="platform" />
		<result column="country" property="country" />
		<result column="region" property="region" />
		<result column="language" property="language" />
		<result column="encoded" property="encoded" />
		<result column="proxy" property="proxy" />
		<result column="remark" property="remark" />
		<result column="state" property="state" />
		<result column="creator" property="creator" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		uuid AS "uuid"
		,dsi_uuid AS "dsiUuid"
	</sql>

	<select id="listFromNewspaper" resultType="map">
		SELECT
		a.uuid AS 'uuid',
		a.chs_name AS 'chsName',
		a.website_url AS 'websiteUrl',
		a.remark AS 'remark',
		COUNT( b.uuid ) 'newpaperCount',
		MAX( b.publish ) 'lastAcquTime'
		FROM
		data_source a
		JOIN data_newspaper b ON a.uuid = b.data_source
		AND a.platform = 1
		GROUP BY
		a.uuid

		select uuid,chs_name,website_url,remark,
		() ,()
		date_format( pubtime,
		'%Y-%m-%d' ) AS 'pubtime',
		dsi_uuid AS
		'dsiUuid',
		dsi_name AS 'dsiName',
		creator AS 'creator',
		count(*) AS
		'dataVolume'
		from wg_ele_news_data
		where 1 = 1
		<if test="pubTime != null and pubTime !=''">
			and (pubtime between CONCAT(#{pubTime},' 00:00:00') and
			CONCAT(#{pubTime},' 23:59:59'))
		</if>
		<if test="condition != null and condition !=''">
			<!-- and dsi_name like CONCAT('%',#{condition},'%') -->
			and dsi_name = #{condition}
		</if>
		GROUP BY date_format( pubtime, '%Y-%m-%d' ),dsi_name
	</select>
</mapper>
